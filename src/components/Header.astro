---
import HeaderLink from './HeaderLink.astro';
import { Icon } from 'astro-icon'
import { SITE_DESCRIPTION, SITE_TITLE_FIRST, SITE_TITLE_SECOND } from '../consts';
---

<header>
  <a href="/" id="home">
    <h1 id="head" title={`[하학상달]: ${SITE_DESCRIPTION}`}>
      <div>
        {SITE_TITLE_FIRST}
      </div>
      <div>
        {SITE_TITLE_SECOND}
      </div>
    </h1>
  </a>
  <nav>
    <HeaderLink href="/">
      <Icon pack="octicon" name="home-fill-24"/>
    </HeaderLink>
    <HeaderLink href="/posts"><Icon pack="octicon" name="git-pull-request-16"/></HeaderLink>
  </nav>
</header>

<style lang="scss">
  [astro-icon] {
    width: 20px;
  }
  
  #home {
    text-decoration: none;
    outline: none;
  }
  
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
  
  nav {
    width: 100%;
    height: 40px;
    padding: 1px 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1px solid #c5c5c5;
    border-radius: 22px;
    overflow: hidden;
    
    html.dark & {
      border: 1px solid #3a3a3a;
    }
  }
  
  #head {
    width: 100%;
    font-size: 48px;
    text-align: center;
    margin: 50px 0;
    color: #aaa;
    font-weight: 100;
    
    div {
      line-height: 1;
    }
  }
  
  html.dark {
    #head {
      color: #333;
    }
  }
  
  #description {
    display: block;
    font-size: 12px;
    text-align: center;
    margin-bottom: 30px;
  }
</style>

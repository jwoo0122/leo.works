---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Utterance from '../components/Utterance.astro';
import { getReadingTime } from '../lib/readingTime';

type Props = CollectionEntry<'blog'>;

const { data: { title, description, pubDate, updatedDate, heroImage }, body } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={heroImage} />
    <style>
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <h1 id="title">{title}</h1>
        <div id="time">
          <time>{pubDate.toLocaleDateString('ko-KR', { year: 'numeric', month: 'long', day: 'numeric' })}</time><span> · {getReadingTime(body)}분</span>
        </div>
        {
          updatedDate && (
            <div>
              Last updated on <time>{updatedDate}</time>
            </div>
          )
        }
        <hr />
        <slot />
      </article>
    </main>
    <Utterance />
    <Footer />
  </body>
</html>

<style lang="scss">
  #title {
    font-size: 2em;
    margin: 0.25em 0 0;
    text-align: center;
    color: #0e0e0e; 
  }
  html.dark {
    #title {
      color: #f0f0f0;
    }
  }
  
  #time {
    text-align: center;
  }
  
  #heroImageContainer {
    position: relative;
    overflow: hidden;
    width: 100%;
    margin-bottom: 30px;
    border-radius: 6px;
    aspect-ratio: 4 / 1;
    
    img {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      max-width: 1000%;
      width: 120%;
      height: 120%;
      object-fit: cover;
      filter: blur(3px);
      z-index: 1;
    }
    
    &::after {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.1);
      z-index: 2;
      content: "";
    }
  }
  
  hr {
    height: 1px;
    width: 50%;
    border: none;
    margin: 30px auto;
    background-color: #bbb;
  }
  
  html.dark {
    hr {
      background-color: #555;
    }
  }
</style>

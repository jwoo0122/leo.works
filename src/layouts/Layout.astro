---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

type Props = {
  title: string
  description: string
  heroImage?: string
};

const { title, description, heroImage } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={heroImage} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style lang="scss">
  #title {
    font-size: 2em;
    margin: 0.25em 0 0;
    text-align: center;
    color: #0e0e0e; 
  }

  html {
    background-color: #efefef;
    color: #444;
  }
  
  html.dark {
    background-color: #1b1b1b;
    color: #c3c3c3;

    #title {
      color: #f0f0f0;
    }
  }
  
  #time {
    text-align: center;
  }
  
  body {
    font-family: Inter;
    width: 100%;
    text-align: left;
    word-wrap: break-word;
    overflow-wrap: break-word;
    line-height: 1.5;
    padding: 0;
    margin: 0;
  }
  
  main {
    padding: 0 14px;
    margin: auto;
    max-width: 85ch;
  }

  hr {
    height: 1px;
    width: 50%;
    border: none;
    margin: 30px auto;
    background-color: #bbb;
  }
  
  html.dark {
    hr {
      background-color: #555;
    }
  }
</style>

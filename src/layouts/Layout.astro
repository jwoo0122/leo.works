---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = {
  title: string;
  description: string;
  heroImage?: string;
  hideNavbar?: boolean;
};

const { title, description, heroImage, hideNavbar = false } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class="bg-neutral-100 text-neutral-900 dark:bg-neutral-900 dark:text-neutral-100"
>
  <head>
    <BaseHead title={title} description={description} image={heroImage} />
  </head>
  <body>
    { !hideNavbar && <Header /> }
    <main class="m-auto max-w-2xl px-3.5">
      <slot />
    </main>
    <Footer />
  </body>
</html>

---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

type Props = {
  title: string
  description: string
  heroImage?: string
};

const { title, description, heroImage } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={heroImage} />
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style lang="scss">
  #title {
    font-size: 2em;
    margin: 0.25em 0 0;
    text-align: center;
    color: #0e0e0e; 
  }
  html.dark {
    #title {
      color: #f0f0f0;
    }
  }
  
  #time {
    text-align: center;
  }

  hr {
    height: 1px;
    width: 50%;
    border: none;
    margin: 30px auto;
    background-color: #bbb;
  }
  
  html.dark {
    hr {
      background-color: #555;
    }
  }
</style>
